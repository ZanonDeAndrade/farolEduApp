generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String // "student" ou "teacher"
  createdAt DateTime @default(now())

  // Relações
  studentSchedules Schedule[] @relation("StudentSchedules")
  teacherSchedules Schedule[] @relation("TeacherSchedules")
}

model Schedule {
  id        Int      @id @default(autoincrement())
  studentId Int
  teacherId Int
  date      DateTime
  createdAt DateTime @default(now())

  student User @relation("StudentSchedules", fields: [studentId], references: [id])
  teacher User @relation("TeacherSchedules", fields: [teacherId], references: [id])
}
